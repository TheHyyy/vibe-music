# Echo Music Server Config

# Server Port
PORT=3001

# JWT Secret (Change this in production)
JWT_SECRET=dev_secret_change_me

# Netease Cloud Music VIP Cookie
# How to get: 
# 1. Open music.163.com in browser and login
# 2. Open Developer Tools (F12) -> Application -> Cookies
# 3. Copy the full cookie string or just `MUSIC_U` and `__csrf`
NETEASE_COOKIE=

# QQ Music Cookie
# How to get: 
# 1. Open y.qq.com in browser and login
# 2. Open Developer Tools (F12) -> Network
# 3. Refresh page, click any request (e.g. fcg_...)
# 4. Copy the "cookie" value from Request Headers
QQ_COOKIE=

# Event log: used to hash IP for stable anonymous identity
# Change this value for your own deployment.
IP_HASH_SALT=dev_salt_change_me

# AI analysis (OpenAI Compatible)
# Example:
# AI_PROVIDER=openai_compatible
# AI_BASE_URL=https://api.openai.com/v1
# AI_MODEL=gpt-4o-mini
# AI_API_KEY=...
AI_PROVIDER=openai_compatible
AI_BASE_URL=
AI_MODEL=
AI_API_KEY=
AI_TEMPERATURE=0.4
AI_MAX_TOKENS=1200

# Feishu webhook bot
FEISHU_WEBHOOK_URL=

# Optional: protect hidden admin page /__admin?token=...
ADMIN_TOKEN=

# Enable/Disable QQ Music (true/false)
ENABLE_QQ_MUSIC=false
